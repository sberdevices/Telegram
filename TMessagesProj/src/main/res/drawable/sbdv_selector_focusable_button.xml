<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/sbdv_white_28">
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@color/sbdv_white_28" />
            <corners android:radius="@dimen/sbdv_widget_selector_corner_radius" />
        </shape>
    </item>
    <item>
        <selector>
            <item
                android:state_focused="true"
                android:state_selected="true">
                <layer-list>
                    <item
                        android:drawable="@drawable/sbdv_selected_item_background"
                        android:state_selected="true" />
                    <item>
                        <shape android:shape="rectangle">
                            <stroke
                                android:width="@dimen/sbdv_widget_selector_width"
                                android:color="@color/sbdv_widget_selector" />
                            <corners android:radius="@dimen/sbdv_widget_selector_corner_radius" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item
                android:drawable="@drawable/sbdv_selected_item_background"
                android:state_selected="true" />
            <item android:state_focused="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <stroke
                                android:width="@dimen/sbdv_widget_selector_width"
                                android:color="@color/sbdv_widget_selector" />
                            <corners android:radius="@dimen/sbdv_widget_selector_corner_radius" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item
                android:drawable="@drawable/sbdv_selected_item_background"
                android:state_selected="true" />
        </selector>
    </item>
</ripple>
