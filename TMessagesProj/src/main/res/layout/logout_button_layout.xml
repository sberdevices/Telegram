<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logoutButtonLayout"
    android:layout_width="584dp"
    android:layout_height="96dp"
    android:background="@drawable/sbdv_logout_background"
    android:focusableInTouchMode="false"
    android:foreground="@drawable/sbdv_selector_focusable_button"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:contentDescription="@string/sbdv_logout"
        android:src="@drawable/ic_logout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sb_sans_regular"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="@string/sbdv_logout"
        android:textAllCaps="false"
        android:textColor="@color/card_text_white"
        android:textSize="32sp"
        android:textStyle="bold" />

</LinearLayout>
